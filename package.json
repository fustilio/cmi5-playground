{
  "name": "cmi5-playground",
  "version": "0.1.0",
  "private": true,
  "description": "CMI5 and xAPI learning analytics packages with HTMX example",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "prettier": "^3.2.4",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "cmi5",
    "xapi",
    "learning-analytics",
    "lrs",
    "htmx"
  ],
  "license": "MIT"
}
